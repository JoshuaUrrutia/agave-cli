#!/usr/bin/env python
"""
    Usage: files-pems-delete [OPTIONS] agave://SYSTEM/SOURCE agave://SYSTEM/DESTINATION

Remove all user permissions (except those of the owner) from a file or directory.

Flags:
  -h, --help            Display this help and exit
"""
from __future__ import print_function
import argparse
import sys
from agavepy.agave import Agave
from agavepy import utils

parser = argparse.ArgumentParser(
    description="Remove all user permissions (except those of the owner) from a file or directory."
)

parser.add_argument(
    "-c",
    "--cachedir",
    default=utils.credentials_cache_dir(),
    help="Session cache directory.")

parser.add_argument(
    "filepath", help="Path where permissions should be deleted")

if __name__ == "__main__":
    try:
        args = parser.parse_args()

        cache_dir = args.cachedir
        uri = args.filepath

        agave = Agave()
        agave.load_client(cache_dir)

        # Refresh tokens if necessary.
        agave.refresh_tokens()
        # Save out session cache
        if agave.client_name is not None:
            agave.save_configs(cache_dir)

        # Obtain uri - remove the prefix 'agave://'.
        uri = uri[len("agave://"):]

        # Delete all user's permissions.
        agave.files_pems_delete(uri)
        sys.exit(0)

    except Exception as err:
        print(err)
        sys.exit(1)
