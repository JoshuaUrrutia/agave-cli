#!/usr/bin/env python
"""
clients-list [flags] [client name]

Lists all Tapis Oauth clients registered to the user on a tenant.

Flags:
    -u, --username      Username.
    -p, --password      Password.
    -t, --tenant        Tenant id where clients are registered.
    -c, --cachedir      Session cache directory.
"""
from __future__ import print_function
import argparse
import sys
from agavepy.agave import Agave
from agavepy import utils

parser = argparse.ArgumentParser(
    description="Lists all Tapis Oauth clients registered to the user on a tenant.")

parser.add_argument("-u", "--username", default=None, help="Username.")
parser.add_argument("-p", "--password", default=None, help="Password.")
parser.add_argument("-t", "--tenant", default=None,
                    help="Tenant id where clients are registered.")

parser.add_argument(
    "-c",
    "--cachedir",
    default=utils.credentials_cache_dir(),
    help="Session cache directory.")

if __name__ == "__main__":
    args = parser.parse_args()

    username = args.username
    password = args.password
    tenantid = args.tenant
    cache_dir = args.cachedir
    agave = Agave()

    context = utils.bootstrap_context(
        cache_dir, tenantid=tenantid, username=username)
    agave = Agave(tenant_id=context['tenantid'], username=context['username'])
    agave.init()

    # List clients.
    try:
        agave.clients_list(password=password, quiet=False)
    except Exception as err:
        print(err)
        sys.exit(1)
