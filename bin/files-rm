#!/usr/bin/env python
"""
    Usage: files-rm [OPTIONS] agave://SYSTEM/PATH

Deletes a file or directory on a Tapis system. The path must be specified as an Agave uri (i.e. agave://tacc-data-user/path/to/delete.txt)

Flags:
    -c, --cachedir    Session cache directory..
    -h, --help        Help
"""
from __future__ import print_function
import argparse
import sys
from agavepy.agave import Agave
from agavepy import utils

parser = argparse.ArgumentParser(
    description="Deletes a file or directory on a Tapis system. The path must be specified as an Agave uri (i.e. agave://tacc-data-user/path/to/delete.txt")

parser.add_argument(
    "-c",
    "--cachedir",
    default=utils.credentials_cache_dir(),
    help="Session cache directory.")

parser.add_argument("filepath", help="Path to file or directory to delete")

if __name__ == "__main__":
    try:
        args = parser.parse_args()

        cache_dir = args.cachedir
        uri = args.filepath

        agave = Agave()
        agave.load_client(cache_dir)

        # Refresh tokens if necessary.
        agave.refresh_tokens()
        # Save out session cache
        if agave.client_name is not None:
            agave.save_configs(cache_dir)

        # Obtain uri - remove the prefix 'agave://'.
        uri = uri[len("agave://"):]

        # List files on remote system.
        agave.files_delete(uri)
        sys.exit(0)

    except Exception as err:
        print(err)
        sys.exit(1)
